{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    },
    {
      "name": "alpha",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "build", "scope": "deps", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "ci", "release": false },
          { "type": "docs", "release": false },
          { "type": "test", "release": false },
          { "type": "chore", "release": false }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ðŸ› Bug Fixes" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
            { "type": "docs", "section": "ðŸ“š Documentation" },
            { "type": "style", "section": "ðŸ’„ Styling" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "build", "section": "ðŸ“¦ Build System" },
            { "type": "ci", "section": "ðŸŽ¡ CI/CD" },
            { "type": "revert", "section": "âª Reverts" },
            { "type": "chore", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to the Rune MCP Server will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo ${nextRelease.version} > VERSION && sed -i.bak 's/version = \".*\"/version = \"${nextRelease.version}\"/' rune-core/Cargo.toml rune-bridge/Cargo.toml && rm rune-core/Cargo.toml.bak rune-bridge/Cargo.toml.bak"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "pnpm-lock.yaml",
          "mcp-server/package.json",
          "rune-core/Cargo.toml",
          "rune-bridge/Cargo.toml",
          "VERSION"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "target/release/librune_bridge.so",
            "label": "Linux Native Module (x64)",
            "name": "rune-linux-x64.node"
          },
          {
            "path": "target/release/librune_bridge.dylib",
            "label": "macOS Native Module (ARM64)",
            "name": "rune-darwin-arm64.node"
          }
        ],
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR' : 'issue'} has been resolved in version ${nextRelease.version} :tada:\n\nThe release is available on:\n- [GitHub release](https://github.com/rune-mcp/server/releases/tag/v${nextRelease.version})\n- [Docker Hub](https://hub.docker.com/r/runemcp/server/tags?name=${nextRelease.version})\n\nYour **[semantic-release](https://github.com/semantic-release/semantic-release)** bot ðŸ“¦ðŸš€",
        "releasedLabels": ["released", "released-on-@${nextRelease.channel}"],
        "failTitle": "The automated release failed ðŸš¨",
        "failComment": "The release from the `${branch.name}` branch has failed.\n\nPlease check the [logs](${process.env.GITHUB_SERVER_URL}/${process.env.GITHUB_REPOSITORY}/actions/runs/${process.env.GITHUB_RUN_ID}) for details."
      }
    ]
  ]
}