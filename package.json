{
  "name": "rune-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Rune MCP Code Context Engine",
  "workspaces": [
    "mcp-server"
  ],
  "scripts": {
    "build": "pnpm run build:rust && pnpm run build:bridge && pnpm run build:ts",
    "build:rust": "cargo build --release",
    "build:bridge": "cd mcp-server && pnpm run build:bridge",
    "build:ts": "cd mcp-server && pnpm run build:ts",
    "dev": "pnpm run build:rust && cd mcp-server && pnpm run dev",
    "inspect": "cd mcp-server && pnpm run inspect",
    "inspect:alt": "cd mcp-server && pnpm run inspect:alt",
    "inspect:kill": "lsof -ti :6277,6274,7277,7274 | xargs kill -9 2>/dev/null || true",
    "test": "cargo test && pnpm -r test",
    "lint": "cargo clippy --all-targets --all-features -- -D warnings && pnpm -r lint",
    "format": "cargo fmt && prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "clean": "cargo clean && pnpm -r clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.0"
}
