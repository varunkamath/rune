{
  "name": "rune-workspace",
  "version": "1.2.0",
  "private": true,
  "type": "module",
  "description": "Rune MCP Code Context Engine",
  "workspaces": [
    "mcp-server"
  ],
  "scripts": {
    "build": "pnpm run build:rust && pnpm run build:bridge && pnpm run build:ts",
    "build:rust": "cargo build --all-features --release",
    "build:bridge": "cd mcp-server && pnpm run build:bridge",
    "build:ts": "cd mcp-server && pnpm run build:ts",
    "dev": "pnpm run build:rust && cd mcp-server && pnpm run dev",
    "inspect": "cd mcp-server && pnpm run inspect",
    "inspect:alt": "cd mcp-server && pnpm run inspect:alt",
    "inspect:kill": "lsof -ti :6277,6274,7277,7274 | xargs kill -9 2>/dev/null || true",
    "test": "RUST_TEST_THREADS=1 cargo test && pnpm -r test",
    "bench": "cargo bench -p rune-core",
    "bench:storage": "cargo bench -p rune-core --bench storage_bench",
    "bench:search": "cargo bench -p rune-core --bench search_bench",
    "bench:indexing": "cargo bench -p rune-core --bench indexing_bench",
    "bench:hybrid": "cargo bench -p rune-core --bench hybrid_bench",
    "bench:embedding": "cargo bench -p rune-core --bench embedding_bench",
    "lint": "cargo clippy --all-targets --all-features -- -D warnings && pnpm -r lint",
    "format": "cargo fmt && prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "clean": "cargo clean && pnpm -r clean",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run --no-ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.34.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.0.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.0"
}
