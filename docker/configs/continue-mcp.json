{
  "command": "docker",
  "args": [
    "run",
    "--rm",
    "-i",
    "--entrypoint",
    "/usr/local/bin/start-mcp",
    "-v",
    "${workspaceFolder}:/workspace:ro",
    "-v",
    "${HOME}/.rune:/data",
    "-e",
    "RUNE_WORKSPACE_ID=${workspaceFolder}",
    "rune-mcp:latest"
  ],
  "transport": "stdio"
}
