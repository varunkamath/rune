{
  "mcpServers": {
    "rune": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--entrypoint",
        "/usr/local/bin/start-mcp",
        "-v",
        "${PWD}:/workspace:ro",
        "-v",
        "${HOME}/.rune:/data",
        "-e",
        "RUNE_WORKSPACE_ID=${PWD}",
        "rune-mcp:latest"
      ],
      "env": {}
    }
  }
}
