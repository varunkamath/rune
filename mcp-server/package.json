{
  "name": "@rune/mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Rune code context engine",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:bridge && pnpm run build:ts",
    "build:bridge": "cd ../rune-bridge && napi build --platform --release ../mcp-server",
    "build:ts": "tsc",
    "dev": "pnpm run build:bridge && tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "clean": "rm -rf dist *.node"
  },
  "keywords": [
    "mcp",
    "code-search",
    "semantic-search",
    "ast"
  ],
  "author": "Rune Contributors",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.1.5",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "jest": "^30.1.1",
    "prettier": "^3.4.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist",
    "*.node"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.15.0"
}
